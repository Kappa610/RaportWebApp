@{
    ViewBag.Title = "Logowanie";
}

<div class="form-container">
    <div class="form-box">
        <h5 class="text-center mb-4">Logowanie</h5>
        <form method="post" action="@Url.Action("Login", "Account")">
            <div class="mb-3">
                <label for="email" class="form-label">Adres e-mail</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Wprowadź e-mail">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Hasło</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Wprowadź hasło">
            </div>
            <button type="submit" class="btn btn-primary w-100">Zaloguj się</button>
        </form>
        <div class="text-center mt-3">
            <p>Nie masz jeszcze konta? <a href="@Url.Action("Register", "Account")">Zarejestruj się</a></p>
        </div>
    </div>
</div>

<style>
    .form-container {
        width: 100%;
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
    }

    .form-box {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>