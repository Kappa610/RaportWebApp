@model RaportWebApp.Models.LoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<div class="form-container">
    <div class="form-box">
        <h5 class="text-center mb-4">Logowanie</h5>

        <!-- Wyświetlanie komunikatów o błędach -->
        <div asp-validation-summary="All" class="text-danger"></div>

        <form method="post" asp-action="Login" asp-controller="Account">
            <div class="mb-3">
                <label for="email" class="form-label">Adres e-mail</label>
                <input type="email" class="form-control" id="email" asp-for="Email" placeholder="Wprowadź e-mail">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Hasło</label>
                <input type="password" class="form-control" id="password" asp-for="Password" placeholder="Wprowadź hasło">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Zaloguj się</button>
        </form>
        <div class="text-center mt-3">
            <p>Nie masz konta? <a asp-action="Register" asp-controller="Account">Zarejestruj się</a></p>
        </div>
    </div>
</div>

<style>
    .form-container {
        width: 100%;
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
    }

    .form-box {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>